<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:fillViewport="true">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_einstellungen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="wirth.lagerverwaltung.Einstellungen"
    android:background="#282828">

    <TextView
        android:text="Server IP-Adresse:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:textColor="#00aa55"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textView9"
        android:layout_alignStart="@+id/edtIP" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/edtIP"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:background="#5d5d5d"
        android:textSize="24sp"
        android:textColorHint="#ffffff"
        android:hint="Server IP-Adresse"
        android:layout_below="@+id/textView10"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Server IP speichern"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnSpeichern"
        android:textAllCaps="false"
        android:layout_below="@+id/edtIP"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp" />

    <Button
        android:text="Admin Passwort speichern"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnadminpw_speichern"
        android:textAllCaps="false"
        android:layout_below="@+id/edtAdminpw"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <TextView
        android:text="Admin Passwort Ã¤ndern:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#00aa55"
        android:id="@+id/textView13"
        android:layout_below="@+id/btnSpeichern"
        android:layout_alignStart="@+id/edtIP"
        android:layout_marginTop="30dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/edtAdminpw"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:background="#5d5d5d"
        android:textSize="24sp"
        android:textColorHint="#ffffff"
        android:hint="Admin Passwort"
        android:layout_below="@+id/textView13"
        android:layout_alignStart="@+id/textView13" />
</RelativeLayout>
</ScrollView>
